<odoo>
    <record id="view_quran_student_payment_report_wizard" model="ir.ui.view">
        <field name="name">quran.student.payment.report.wizard.form</field>
        <field name="model">quran.student.payment.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Monthly Student Payments Report">
                <group>
                    <field name="branch_ids" widget="many2many_tags"/>
                    <field name="month"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_report" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <act_window
            id="action_quran_student_payment_report_wizard"
            name="Student Payment Report"
            res_model="quran.student.payment.report.wizard"
            view_mode="form"
            target="new"
    />
</odoo>
