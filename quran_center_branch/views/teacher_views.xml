<odoo>
    <record id="view_quran_teacher_tree" model="ir.ui.view">
        <field name="name">quran.teacher.tree</field>
        <field name="model">quran.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="salary"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_quran_teacher_form" model="ir.ui.view">
        <field name="name">quran.teacher.form</field>
        <field name="model">quran.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="branch_id" required="1"/>
                        <field name="join_date" required="1"/>
                        <field name="leave_date"/>
                        <field name="salary"/>
                        <field name="active" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
