<odoo>
    <record id="view_quran_expense_tree" model="ir.ui.view">
        <field name="name">quran.expense.tree</field>
        <field name="model">quran.expense</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="type"/>
                <field name="amount"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_quran_expense_form" model="ir.ui.view">
        <field name="name">quran.expense.form</field>
        <field name="model">quran.expense</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="branch_id"/>
                        <field name="type"/>
                        <field name="amount" required="1"/>
                        <field name="date" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
