<odoo>
    <record id="view_quran_donation_tree" model="ir.ui.view">
        <field name="name">quran.donation.tree</field>
        <field name="model">quran.donation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="donor_name"/>
                <field name="branch_id"/>
                <field name="amount"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_quran_donation_form" model="ir.ui.view">
        <field name="name">quran.donation.form</field>
        <field name="model">quran.donation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="donor_name"/>
                        <field name="branch_id"/>
                        <field name="amount" required="1"/>
                        <field name="date" required="1"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
