<odoo>
    <record id="view_quran_payment_tree" model="ir.ui.view">
        <field name="name">quran.payment.tree</field>
        <field name="model">quran.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_id"/>
                <field name="branch_id"/>
                <field name="date"/>
                <field name="month"/>
                <field name="amount"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="view_quran_payment_form" model="ir.ui.view">
        <field name="name">quran.payment.form</field>
        <field name="model">quran.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id" required="1"/>
                        <field name="branch_id" required="1"/>
                        <field name="date"/>
                        <field name="month"/>
                        <field name="amount" required="1"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
